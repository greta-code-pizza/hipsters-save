<div class="box wide">
  <div class="legend right">
    <a href="/settings"><%= t('settings.twofa_enroll.legend')%></a>
  </div>
  <div class="legend">
    <%= @title %>
  </div>

  <%= form_with model: @user, url: twofa_auth_url, method: :post, local: true do |f| %>
    <p>
    <% if @user.has_2fa? %>
    <%= t('settings.twofa.p1')%>
    <% else %>
    <%= t('settings.twofa.p2')%>
    <% end %>
    </p>

    <div class="boxline">
      <%= f.label :password, t('settings.twofa.currentpassword'), :class => "required" %>
      <%= f.password_field :password, :size => 40, :autocomplete => "off" %>
    </div>

    <p>
    <% if @user.has_2fa? %>
      <%= f.submit t('settings.twofa.disableauthentication') %>
    <% else %>
      <%= f.submit t('settings.twofa.continue') %>
    <% end %>
  <% end %>
</div>
